---
import { loadTranslations } from '@/i18n';
import Base from '@/layouts/Base.astro';

export { getI18nPaths as getStaticPaths } from '@/i18n';

const t = await loadTranslations(Astro.currentLocale);
---

<Base
  title={t('newsletter.success.title')}
  description={t('newsletter.success.description')}
  className="flex items-center justify-center min-h-screen"
>
  <div class="max-w-2xl mx-auto text-center">
    <h1 class="text-4xl font-bold mb-4">{t('newsletter.success.title')}</h1>
    <p class="text-xl mb-8">{t('newsletter.success.description')}</p>
    <a href="/" class="text-primary hover:underline">{t('newsletter.success.backToHome')}</a>
  </div>
</Base>
