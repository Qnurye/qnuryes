{
  "name": "qnury-es",
  "private": true,
  "version": "0.0.0",
  "description": "Qnurye's personal website and API",
  "scripts": {
    "dev:astro": "pnpm --filter @qnury-es/astro dev",
    "dev:api": "pnpm --filter @qnury-es/worker-api dev",
    "dev:email": "pnpm --filter @qnury-es/worker-api dev:email",
    "build": "pnpm --filter @qnury-es/astro build",
    "preview": "pnpm --filter @qnury-es/astro preview",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format . --write",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "deploy": "pnpm --filter @qnury-es/astro run deploy",
    "deploy:api": "pnpm --filter @qnury-es/worker-api run deploy",
    "prepare": "husky"
  },
  "keywords": [
    "astro",
    "cloudflare",
    "workers",
    "react",
    "typescript"
  ],
  "author": "Qnury",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sanitize-html": "^2.17.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3",
    "wrangler": "^4.59.2"
  },
  "pnpm": {
    "overrides": {
      "undici": ">=7.18.2"
    }
  },
  "lint-staged": {
    "*.{js,ts,mjs,mts,cjs,cts,jsx,tsx,json,jsonc,css,astro}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
